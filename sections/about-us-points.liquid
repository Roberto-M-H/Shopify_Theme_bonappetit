<div class="about-points">
  {%for block in section.blocks%}
  <div class="inner-point">
    <h2>{{ block.settings.heading }}</h2>
    <p>{{ block.settings.paragraph }}</p>
  </div>
  {%endfor%}
</div>

{% schema %}
  {
    "name": "Points",
    "settings": [
	
	],
"blocks":[
      {
         "type":"point_block",
         "name":"point_block",
         "settings":[
            {
           "type": "text",
           "id": "heading",
           "label": "Heading"
            },
			{
           "type": "richtext",
           "id": "paragraph",
           "label": "Paragraph"
            }
         ]
      }
   ]
  }
{% endschema %}
